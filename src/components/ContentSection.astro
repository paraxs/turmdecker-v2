---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  image: ImageMetadata;
  alt: string;
  reverse?: boolean;
}

const { title, image, alt, reverse = false } = Astro.props;
---

<section class="py-16 md:py-24 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class={`flex flex-col md:flex-row gap-12 md:gap-20 items-center ${reverse ? 'md:flex-row-reverse' : ''}`}>
      
      <div class="w-full md:w-1/2">
        <div class="relative group">
          <div class="absolute top-4 left-4 w-full h-full border-2 border-primary/20 rounded z-0 transition-transform group-hover:translate-x-2 group-hover:translate-y-2"></div>
          
          <div class="relative z-10 rounded overflow-hidden shadow-lg bg-gray-200">
             <Image 
                src={image} 
                alt={alt} 
                width={800} 
                class="object-cover w-full h-auto transform transition-transform duration-700 group-hover:scale-105" 
             />
          </div>
        </div>
      </div>

      <div class="w-full md:w-1/2">
        <h2 class="text-3xl font-bold text-dark-900 mb-6 relative inline-block">
          {title}
          <span class="absolute -bottom-2 left-0 w-1/3 h-1 bg-primary"></span>
        </h2>
        
        <div class="prose prose-lg text-gray-600 prose-headings:text-dark-900 prose-a:text-primary hover:prose-a:text-dark-800">
          <slot /> </div>
      </div>

    </div>
  </div>
</section>