---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="bg-white border-b border-gray-200 pt-32 md:pt-40 pb-16 md:pb-24">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl">
      <h1 class="text-4xl md:text-6xl font-bold text-dark-900 mb-6 uppercase tracking-tight">
        {title} <span class="text-primary">.</span>
      </h1>
      {subtitle && (
        <p class="text-xl text-gray-600 max-w-2xl leading-relaxed">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</div>