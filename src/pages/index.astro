---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ServiceCard from "../components/ServiceCard.astro";
import Hero from "../components/Hero.astro";

import hero1 from "../assets/scraped/hero-bg.webp";
import hero2 from "../assets/scraped/hero-bg-2.webp";
import hero3 from "../assets/scraped/hero-bg-3.webp";
import hero4 from "../assets/scraped/hero-bg-1.webp";

import imgHolz from "../assets/eindeckung/eindeckung08.webp";
import imgHolz2 from "../assets/eindeckung/eindeckung02.webp";

import imgSpezial from "../assets/spezialarbeiten/spezialarbeiten01.webp";
import imgSpezial2 from "../assets/spezialarbeiten/spezialarbeiten02.webp";

import imgRestaurierung2 from "../assets/restaurierung/restaurierung01.webp";
import imgRestaurierung from "../assets/restaurierung/restaurierung02.webp";

import imgBlei1 from "../assets/arbeiten-mit-blei/arbeiten-mit-blei01.webp";
import imgBlei2 from "../assets/arbeiten-mit-blei/arbeiten-mit-blei02.webp";

import imgDrohne1 from "../assets/photogrammetrie-digitaler-zwilling/photogrammetrie-digitaler-zwilling03.webp";
import imgDrohne2 from "../assets/photogrammetrie-digitaler-zwilling/photogrammetrie-digitaler-zwilling02.webp";

import imgBleiBrunnen1 from '../assets/blei-brunnenwanne/blei-brunnenwanne01.webp';
import imgBleiBrunnen2 from '../assets/blei-brunnenwanne/blei-brunnenwanne02.webp';
import hero1m from "../assets/scraped/hero-bg-mobile.webp";
---


<Layout title="Gerüstfreies Kirchturmdecken | Kofler e.U."
 description="Gerüstfreies Kirchturm- & Dachdecken, Industrieklettern, Spenglerei, Restaurierung und 3D-Bestandsaufnahme. Österreichweit. Projekt anfragen."
>
	
	<link slot="head" rel="preload" as="image" href={hero1m.src} type="image/webp" media="(max-width: 768px)" />
	<link slot="head" rel="preload" as="image" href={hero1.src}  type="image/webp" media="(min-width: 769px)" />


    <Hero
		images={[hero1, hero2, hero3, hero4]}
		mobileFallback={hero1m}
		heightClass="h-[75vh] md:h-[85vh]"
		contentClass="pt-24 md:pt-28"
		overlayClass="bg-black/35"
		storageKey="tdHero:index"
		bgPositionClass="bg-center md:bg-[70%_center]"
  >
     <div class="max-w-md md:max-w-2xl">
	<h1 class="text-base md:text-lg font-semibold tracking-wide  text-white/90 mb-3">
	  Kirchtürme, Dächer & Fassaden gerüstfrei am Seil – Österreichweit
	</h1>

	<h2 class="text-3xl md:text-4xl lg:text-4xl font-bold mb-6 leading-tight">
	  WO IHRE GRENZEN SIND,<br />
	  <span class="text-primary">BEGINNT UNSER ALLTAG.</span>
	</h2> 

<p class="text-base md:text-lg text-white/90 leading-relaxed">
  Wir sanieren und decken Kirchtürme, Dächer und Fassaden
  gerüstfrei am Seil<br class="hidden md:block" />
  – mit&nbsp;<a
    href="/laerchenschindel/"
    class="font-semibold text-white hover:text-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/70 focus-visible:ring-offset-2 focus-visible:ring-offset-transparent transition-colors"
  >Lärchenschindeln</a>, Kupfer und Schiefer.<br class="hidden md:block" />
  So sparen Sie Gerüstkosten und Eingriffe in den laufenden Betrieb.<br class="hidden md:block" />
  Digitale Zwillinge machen Aufwand und Kosten vorab transparent planbar.
</p>
 <!-- CTA: primär + sekundär (Above the Fold) -->
<div class="mt-7 flex flex-col sm:flex-row gap-3 sm:items-center">
  <!-- Primary -->
  <a
    href="/kontakt/"
    class="inline-flex w-full sm:w-auto justify-center items-center rounded-md bg-primary px-6 py-1 text-base font-semibold text-white shadow-lg shadow-black/20
           hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/80 focus-visible:ring-offset-2 focus-visible:ring-offset-transparent
           transition-colors"
  >
    Unverbindlich anfragen
  </a>

  <!-- Secondary -->
  <a
    href="#rubriken"
    class="inline-flex w-full sm:w-auto justify-center items-center rounded-md px-6 py-3 text-base font-semibold text-white/90
           hover:text-white hover:bg-white/10
           focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/80 focus-visible:ring-offset-2 focus-visible:ring-offset-transparent
           transition-colors"
  >
    Leistungen ansehen
    <span aria-hidden="true" class="ml-2">→</span>
  </a>
</div>


    </div>
  </Hero>

  <section id="leistungen" class="scroll-mt-28 md:scroll-mt-32 bg-white border-y border-gray-200">
    <div class="container mx-auto px-4 py-16 md:py-20">

      <!-- CD Separator oben -->
      <div class="relative h-10 mb-14">
        <div class="absolute inset-x-0 top-1/2 -translate-y-1/2 h-[2px] bg-primary/80"></div>
        <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-7 h-7 bg-primary rotate-45"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-14">

        <!-- Linke Spalte -->
        <div>
          <h2 class="text-xl md:text-2xl font-semibold tracking-wide uppercase text-dark-900 mb-4">
            GERÜSTFREIES KIRCHTURM- &amp; DACHDECKEN
          </h2>

          <p class="text-gray-900/90 leading-relaxed mb-8">
  Wir decken und sanieren Dächer, Fassaden und Kirchtürme dort, wo Gerüst, Kran oder Bühne
  kaum noch sinnvoll sind. Mit seilunterstützter Zugangstechnik erreichen wir exponierte
  Bauteile sicher und halten Baustellen schlank, übersichtlich und kalkulierbar.
</p>

<ul class="space-y-6 text-gray-900/90 leading-relaxed">
  <li class="flex gap-4">
    <span class="mt-1 text-primary shrink-0">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
      </svg>
    </span>
    <span>
      Lärchenschindel, Kupfer, Reinzink, Blei, Schiefer und Steinplatten – wir wählen das
      System, das statisch, konstruktiv und denkmalpflegerisch sinnvoll ist.
    </span>
  </li>

  <li class="flex gap-4">
    <span class="mt-1 text-primary shrink-0">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
      </svg>
    </span>
    <span>
      Gerüstfreier Zugang reduziert in vielen Projekten die Gerüst- und Nebenkosten deutlich.
    </span>
  </li>

  <li class="flex gap-4">
    <span class="mt-1 text-primary shrink-0">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
      </svg>
    </span>
    <span>
      Weniger Stellfläche, kürzere Sperren, geringerer Eingriff in den laufenden Betrieb.
    </span>
  </li>

  <li class="flex gap-4">
    <span class="mt-1 text-primary shrink-0">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
      </svg>
    </span>
    <span>
      Auch kleinere Ausbesserungen und Instandsetzungen bleiben so wirtschaftlich machbar.
    </span>
  </li>

  <li class="flex gap-4">
    <span class="mt-1 text-primary shrink-0">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
      </svg>
    </span>
    <span>
      Dokumentation, Fotografie und digitale Modelle liefern belastbare Grundlagen für
      Gutachten und weitere Planung.
    </span>
  </li>

  <li class="flex gap-4 pt-2">
    <span class="mt-1 text-primary shrink-0">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 4h16v16H4z" /><path d="m4 6 8 6 8-6" />
      </svg>
    </span>
    <a class="text-gray-900/80 hover:text-primary underline underline-offset-4" href="/kontakt/">
      Kontaktieren Sie uns – wir prüfen Ihr Projekt und machen Ihnen einen klaren Vorschlag.
    </a>
  </li>
</ul>
        </div>

        <!-- Rechte Spalte -->
        <div>
          <h2 class="text-xl md:text-2xl font-semibold tracking-wide uppercase text-dark-900 mb-4">
            HÖHEN- UND SPEZIALARBEITEN
          </h2>

          <p class="text-gray-900/90 leading-relaxed mb-8">
            Wo Gerüste keinen Platz finden oder Kräne und Hebebühnen an Grenzen stoßen,
            setzen wir seilunterstützte Zugangstechnik ein. Damit erreichen wir Fassaden,
            Türme und Konstruktionen, die sonst kaum oder nur mit unverhältnismäßigem Aufwand bearbeitet werden könnten.
          </p>

          <ul class="space-y-6 text-gray-900/90 leading-relaxed">
            <li class="flex gap-4">
              <span class="mt-1 text-primary shrink-0">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
                </svg>
              </span>
              <span>Seilunterstützte Höhenarbeiten an Kirchtürmen, Fassaden, Hallen und Sonderkonstruktionen.</span>
            </li>
            <li class="flex gap-4">
              <span class="mt-1 text-primary shrink-0">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
                </svg>
              </span>
              <span>Geringe Vor- und Nacharbeitszeiten im Vergleich zu großflächigen Gerüsten.</span>
            </li>
            <li class="flex gap-4">
              <span class="mt-1 text-primary shrink-0">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
                </svg>
              </span>
              <span>Seilunterstützte Fassadenarbeiten, Montage- und Demontagearbeiten an schwer zugänglichen Bauteilen.</span>
            </li>
            <li class="flex gap-4">
              <span class="mt-1 text-primary shrink-0">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
                </svg>
              </span>
              <span>Restaurierungsarbeiten und Instandsetzungen an verschiedenen Eindeckungsarten.</span>
            </li>
            <li class="flex gap-4">
              <span class="mt-1 text-primary shrink-0">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
                </svg>
              </span>
              <span>Sandstrahltechnik auf Blech für schonende Reparaturen und Oberflächenvorbereitung.</span>
            </li>
            <li class="flex gap-4">
              <span class="mt-1 text-primary shrink-0">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14" /><path d="M13 6l6 6-6 6" />
                </svg>
              </span>
              <span>Bleiarbeiten, Verbleiungen von Brunnenwannen, Gesimsen und figuralen Objekten.</span>
            </li>

            <li class="flex gap-4 pt-2">
              <span class="mt-1 text-primary shrink-0">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16v16H4z" /><path d="m4 6 8 6 8-6" />
                </svg>
              </span>
              <a class="text-gray-900/80 hover:text-primary underline underline-offset-4" href="/kontakt/">
                Kontaktieren Sie uns, wir finden eine Lösung.
              </a>
            </li>
          </ul>
        </div>

      </div>

      <!-- CD Separator unten -->
      <div class="relative h-10 mt-14">
        <div class="absolute inset-x-0 top-1/2 -translate-y-1/2 h-[2px] bg-primary/80"></div>
        <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-7 h-7 bg-primary rotate-45"></div>
      </div>

    </div>
  </section>

  <section id="rubriken" class="scroll-mt-28 md:scroll-mt-32 py-14 md:py-16 bg-white border-t border-gray-200">
    <div class="container mx-auto px-4">
        
      <div class="text-center mb-10">
        <h2 class="text-4xl font-bold text-dark-900 mb-4">UNSERE LEISTUNGEN</h2>
        <div class="w-24 h-1 bg-primary mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <ServiceCard
          title="Eindeckungen"
          href="/eindeckungen/"
          images={[imgHolz, imgHolz2]}
          altText="Kirchturm mit Holzschindeln gedeckt"
        />

        <ServiceCard
          title="Spezialarbeiten"
          href="/spezialarbeiten/"
          images={[imgSpezial, imgSpezial2]}
          altText="Industriekletterer am Seil"
        />

        <ServiceCard
          title="Restaurierung"
          href="/restaurierung/"
          images={[imgRestaurierung, imgRestaurierung2]}
          altText="Restaurierung einer Kirchturmspitze"
        />

        <ServiceCard
          title="Arbeiten mit Blei"
          href="/arbeiten-mit-blei/"
          images={[imgBlei1, imgBlei2]}
          altText="Bleiarbeiten an historischen Bauwerken"
        />
        
        <ServiceCard
          title="Blei Brunnenwanne"
          href="/blei-brunnenwanne/"
          images={[imgBleiBrunnen1, imgBleiBrunnen2]}
          altText="Historische Brunnen mit nahtlos verschweißten Blei-Brunnenwannen – dauerhaft wasserdicht und wirtschaftlich."
        />

        <ServiceCard
          title="Photogrammetrie & Digitaler Zwilling"
          href="/photogrammetrie-digitaler-zwilling/"
          images={[imgDrohne1, imgDrohne2]}
          altText="Digitale Bestandsaufnahme mit Drohnen"
        />

      </div>

    </div>
  </section>

  <section class="py-24 bg-primary text-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-8">Haben Sie ein Projekt in luftiger Höhe?</h2>
      <a href="/kontakt/" class="inline-block bg-white text-primary hover:bg-dark-900 hover:text-white px-10 py-4 font-bold rounded transition-all shadow-xl">
        Kontakt aufnehmen
      </a>
    </div>
  </section>
  
  <Footer slot="footer" />
</Layout>
