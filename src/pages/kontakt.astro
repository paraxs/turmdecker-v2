---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';

// Optional: Ein statisches Bild deiner Location als Platzhalter für die Karte
// Du kannst einen Screenshot von Google Maps machen und in assets speichern.
// Hier nutzen wir vorerst einen Platzhalter-Div.
---

<Layout title="Kontakt | Turmdecker Lienz">
  <Header slot="header" />

  <main>
    <PageHeader 
      title="Kontakt" 
      subtitle="Wir freuen uns auf Ihre Anfrage. Gerne erstellen wir Ihnen ein unverbindliches Angebot." 
    />

    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          
          <div>
            <h2 class="text-3xl font-bold text-dark-900 mb-8">Kofler e.U.</h2>
            
            <div class="space-y-8 text-lg text-gray-600">
              
              <div class="flex items-start gap-4">
                <div class="bg-primary/10 p-3 rounded text-primary mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-dark-900 mb-1">Anschrift</h3>
                  <p>Peggetzstraße 20</p>
                  <p>9900 Lienz, Osttirol</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="bg-primary/10 p-3 rounded text-primary mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-dark-900 mb-1">Telefon</h3>
                  <p><a href="tel:+436644328298" class="hover:text-primary transition-colors decoration-clone">+43 664 4328298</a></p>
                  <p class="text-sm text-gray-500 mt-1">Mo-Fr: 08:00 - 18:00 Uhr</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="bg-primary/10 p-3 rounded text-primary mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-dark-900 mb-1">E-Mail</h3>
                  <p><a href="mailto:office@turmdecker.com" class="hover:text-primary transition-colors">office@turmdecker.com</a></p>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 p-8 md:p-10 rounded-lg shadow-sm border border-gray-100">
            <h3 class="text-2xl font-bold mb-6 text-dark-900">Schreiben Sie uns</h3>
            
            <form action="https://formspree.io/f/xwpgnyra" method="POST" class="space-y-6">
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                  <input type="text" name="name" id="name" required class="w-full px-4 py-3 rounded border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-colors" placeholder="Ihr Name" />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Telefon</label>
                  <input type="tel" name="phone" id="phone" class="w-full px-4 py-3 rounded border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-colors" placeholder="+43 ..." />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E-Mail Adresse</label>
                <input type="email" name="email" id="email" required class="w-full px-4 py-3 rounded border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-colors" placeholder="max@muster.at" />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Nachricht</label>
                <textarea name="message" id="message" rows="4" required class="w-full px-4 py-3 rounded border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-colors" placeholder="Worum geht es bei Ihrem Projekt?"></textarea>
              </div>

              <button type="submit" class="w-full bg-primary text-white font-bold py-4 rounded hover:bg-primary-dark transition-colors shadow-lg">
                Nachricht absenden
              </button>
            </form>
          </div>

        </div>
      </div>
    </section>

    <section class="h-[400px] w-full bg-gray-200 relative group overflow-hidden">
      
      <div id="map-placeholder" class="absolute inset-0 flex items-center justify-center bg-dark-900/10 cursor-pointer transition-colors hover:bg-dark-900/20 z-10">
        <div class="text-center bg-white p-6 rounded shadow-xl transform transition-transform group-hover:scale-105">
          <p class="font-bold text-lg text-dark-900 mb-2">Karte laden</p>
          <p class="text-sm text-gray-500 mb-4">Hinweis: Es werden Daten an Google Maps übertragen.</p>
          <button class="bg-primary text-white px-6 py-2 rounded text-sm font-bold">
            Karte anzeigen
          </button>
        </div>
        </div>

      <div id="map-container" class="w-full h-full"></div>

    </section>

  </main>

  <Footer slot="footer" />
</Layout>

<script>
  // Logik für das Nachladen der Karte
  const placeholder = document.getElementById('map-placeholder');
  const container = document.getElementById('map-container');

  // Die echte Google Maps URL (Peggetzstraße 20, Lienz)
  const mapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d202.91182658010604!2d12.794416510522613!3d46.82311018613173!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47775dc5ccc697a7%3A0xf91a15ebed6f029f!2sKofler%20e.%20U.!5e0!3m2!1sde!2sat!4v1765274521025!5m2!1sde!2sat";

  placeholder?.addEventListener('click', () => {
    // Iframe erstellen
    const iframe = document.createElement('iframe');
    iframe.setAttribute('src', mapUrl);
    iframe.setAttribute('width', '100%');
    iframe.setAttribute('height', '100%');
    iframe.setAttribute('style', 'border:0;');
    iframe.setAttribute('allowfullscreen', '');
    iframe.setAttribute('loading', 'lazy');
    
    // Placeholder entfernen, Iframe einfügen
    placeholder.style.display = 'none';
    container?.appendChild(iframe);
  });
</script>